proc read_p {NAME PATH} {
    add wave -divider "$NAME"
    add_wave "-noupdate -hex"        $PATH/READ_*
}

proc write_p {NAME PATH} {
    add wave -divider "$NAME"      
    add_wave "-noupdate  -hex"       $PATH/WRITE_*
}

proc match_p {NAME PATH} {
    add wave -divider "$NAME"
    add_wave "-noupdate  -hex"       $PATH/MATCH_*
}
