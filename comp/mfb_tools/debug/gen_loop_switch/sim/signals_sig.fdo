proc rst { } {
   exec make
   restart -f
   run -a
   wave zoom full
}

view wave
delete wave *

add wave -divider
add_wave "-noupdate -color yellow -label RESET"   /testbench/RESET
add_wave "-noupdate -color yellow -label CLK"     /testbench/CLK

add wave -divider
add_wave "-noupdate" /testbench/*
add wave -divider
add_wave "-noupdate" /testbench/DUT_U/VHDL_DUT_U/*
