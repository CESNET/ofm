proc rx {NAME PATH} {
   add_wave "-group {$NAME} -noupdate -hex" $PATH/RX_*
}

proc tx {NAME PATH} {    
   add_wave "-group {$NAME} -noupdate -hex" $PATH/TX_*
}

proc ex {NAME PATH} {  
   add_wave "-group {$NAME} -noupdate -hex" $PATH/EX_*
}

proc inter {NAME PATH} {
  add_wave "-group {$NAME} -noupdate -hex" $PATH/s_*
}
