set FIRMWARE_BASE    "../../../../.."
set COMP_BASE        "$FIRMWARE_BASE/comp"
set ENTITY_BASE      ".."

set TB_FILE "testbench.vhd"
set SIG_FILE "signals.fdo"

set COMPONENTS [list \
   [ list "ELASTIC_FIFO"      $ENTITY_BASE        "FULL" ] \
]

source "$FIRMWARE_BASE/build/Modelsim.inc.fdo"

exec make
view wave
delete wave *

source "./signals.fdo"

restart -f

run 1 us
wave zoom full
