# Paths
set UUT_PATH  "/testbench/uut"
set TB_PATH   "/testbench"

source  "signals.fdo"

exec make
view wave
delete wave *

add wave -divider ""
add_wave "-group { testbench } -noupdate -hex"   $TB_PATH/*

add wave -divider ""
add_wave "-group { uut } -noupdate -hex"   $UUT_PATH/*

config wave -signalnamewidth 1

